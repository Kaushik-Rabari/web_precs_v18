    <record id="menu_teacher" model="website.menu">
        <field name="name">Teachers</field>
        <field name="url">/academy/academy1</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">1</field>
    </record>

    <template id="teacher_data">
        <t t-call="website.layout">
            <t t-set="title">Teacher Names</t>
            <div class="oe_structure">
                <div class="container">
                    <div class="clearfix oe_login_buttons" style="margin:10px">
                        <a href="/myteacher" class="btn btn-primary pull-left">Create Teacher</a>
                    </div>
                    <table class="table">
                        <tr>
                            <th> ID </th>
                            <th> Name </th>
                            <th> Mobile </th>
                            <th> Gender </th>
                            <th> Address </th>
                            <th> Email </th>
                            <t t-foreach="id" t-as="teacher">
                                <tr>
                                    <td>
                                        <b>
                                            <t t-esc="teacher.id"/>
                                        </b>
                                    </td>
                                    <td>
                                        <a t-att-href = "'/odoo/action-272/'+str(teacher.id)">
                                            <t t-esc='teacher.teacher_name'/>
                                        </a>
                                    </td>
                                    <td>
                                        <a t-att-href = "'/odoo/action-272/'+str(teacher.id)">
                                            <t t-esc='teacher.teacher_mobile'/>
                                        </a>
                                    </td>
                                    <td>
                                        <a t-att-href = "'/odoo/action-272/'+str(teacher.id)">
                                            <t t-esc='teacher.teacher_gender'/>
                                        </a>
                                    </td>
                                    <td>
                                        <a t-att-href = "'/odoo/action-272/'+str(teacher.id)">
                                            <t t-esc='teacher.teacher_address'/>
                                        </a>
                                    </td>
                                    <td>
                                        <a t-att-href = "'/odoo/action-272/'+str(teacher.id)">
                                            <t t-esc='teacher.teacher_email'/>
                                        </a>
                                    </td>
                                </tr>
                            </t>
                        </tr>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="website_v18.portal_teacher_views" name="Teachers">
    <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>
        <t t-call="portal.portal_searchbar">
            <t t-set="title">Teachers</t>
        </t>
        <t t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th class="text-left">Name</th>
                    <th class="text-center">Mobile</th>
                    <th class="text-center">Address</th>
                    <th class="text-center">Email</th>
                </tr>
            </thead>
            <t t-foreach="id" t-as="teacher">
                <tr>
                    <td class='text-left'>
                        <span t-field="teacher.teacher_name"/>
                    </td>
                    <td class='text-center'>
                        <span t-field="teacher.teacher_mobile"/>
                    </td>
                    <td class='text-center'>
                        <span t-field="teacher.teacher_address"/>
                    </td>
                    <td class='text-left' style="padding-left:7rem">
                        <span t-field="teacher.teacher_email"/>
                    </td>
                </tr>
            </t>
        </t>
    </t>
    </template>


