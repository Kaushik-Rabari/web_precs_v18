<odoo>
    <record id="prod_tmpl_inherited_form" model="ir.ui.view">
        <field name="name">prod.tmpl.inherited.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form[@name='categ_id']" position="after">
                <field name="document_ids" string="Variant Documents"/>
            </xpath>
        </field>
    </record>
</odoo>